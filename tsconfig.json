{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist/",
        "sourceMap": true,
        "moduleResolution": "node",
        "removeComments": true,
        "noUnusedLocals": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types/",
            "src/typings/"
        ],
        "types": [
            "core-js",
            "node"
        ]
    },
    "exclude": [
         "dist",
        "node_modules"
    ]
}
